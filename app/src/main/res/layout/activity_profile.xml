<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_txt"
                android:fontFamily="@font/libre_semi_bold"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:gravity="start|center"
                android:paddingHorizontal="16dp"
                android:textStyle="bold"
                android:textColor="@color/button_text"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_profile"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/edit_tv"
                app:tint="@color/text_color_gray" />

            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_txt"
                android:fontFamily="@font/libre_medium"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="start|center"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/text_Color_light"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
               >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:src="@drawable/demo_profile"
                    android:scaleType="centerCrop"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/line_color"
                    android:layout_width="75dp"
                    android:layout_height="75dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_txt"
                        android:fontFamily="@font/libre_semi_bold"
                        android:textSize="16dp"
                        android:paddingLeft="5dp"
                        android:gravity="start|center"
                        android:textStyle="bold"
                        android:textColor="@color/text_ColorDark"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="14dp"
                        android:layout_marginTop="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp">
                        <TextView
                            android:id="@+id/user_type_tv"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="EE"
                            android:fontFamily="@font/libre_medium"
                            android:textSize="12dp"
                            android:paddingStart="16dp"
                            android:layout_centerVertical="true"
                            android:gravity="start|center"
                            android:textStyle="bold"
                            android:textColor="@color/button_text"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mail_icon"
                    app:tint="@color/text_ColorDark" />

                <TextView
                    android:id="@+id/email_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_txt"
                    android:fontFamily="@font/libre_semi_bold"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textColor="@color/text_ColorDark"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_local_phone_24"
                    app:tint="@color/text_ColorDark" />

                <TextView
                    android:id="@+id/phone_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9876543210"
                    android:fontFamily="@font/libre_semi_bold"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textColor="@color/text_ColorDark"/>
            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#135CCA"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/projects_img"
                     />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_working_projects"
                            android:fontFamily="@font/libre_semi_bold"
                            android:textSize="14dp"
                            android:gravity="start|center"
                            android:textStyle="bold"
                            android:textColor="@color/white_text"/>

                        <TextView
                            android:id="@+id/current_projects_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24works"
                            android:fontFamily="@font/libre_medium"
                            android:textSize="12dp"
                            android:layout_marginTop="5dp"
                            android:gravity="start|center"
                            android:textColor="@color/white_text"/>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/add_new_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/menu_green"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:text="@string/add_new_project"
                        android:fontFamily="@font/libre_medium"
                        android:textSize="12dp"
                        android:paddingStart="16dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/button_text"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edt_bg">

    <LinearLayout
        android:id="@+id/settings_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/baseline_settings_24"
            android:scaleType="centerCrop"
            app:civ_circle_background_color="@color/white_text"
            app:civ_border_width="7dp"
            app:civ_border_color="@color/white_text"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:fontFamily="@font/libre_medium"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textColor="@color/text_ColorDark"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:id="@+id/dark_mode_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img"
            android:src="@drawable/baseline_dark_mode_24"
            android:scaleType="centerCrop"
            app:civ_circle_background_color="@color/white_text"
            app:civ_border_width="7dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/white_text"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dark_mode"
            android:fontFamily="@font/libre_medium"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textColor="@color/text_ColorDark"/>

            <com.suke.widget.SwitchButton
                android:id="@+id/switch_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:sb_checked_color="?attr/colorPrimary"
                android:layout_gravity="end"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/Notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/baseline_notifications_24"
            android:scaleType="centerCrop"
            app:civ_circle_background_color="@color/white_text"
            app:civ_border_width="7dp"
            app:civ_border_color="@color/white_text"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:fontFamily="@font/libre_medium"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textColor="@color/text_ColorDark"/>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/baseline_language_24"
            android:scaleType="centerCrop"
            app:civ_circle_background_color="@color/white_text"
            app:civ_border_width="7dp"
            app:civ_border_color="@color/white_text"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/language"
            android:fontFamily="@font/libre_medium"
            android:textSize="16dp"
            android:paddingLeft="5dp"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:textColor="@color/text_ColorDark"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/baseline_language_24"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@+id/language_name_tv"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/language_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/libre_medium"
                    android:textSize="14dp"
                    android:paddingLeft="5dp"
                    android:textColor="@color/text_ColorDark"/>
            </RelativeLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/support_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/online_support"
                android:scaleType="centerCrop"
                app:civ_circle_background_color="@color/white_text"
                app:civ_border_width="7dp"
                app:civ_border_color="@color/white_text"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/support"
                android:fontFamily="@font/libre_medium"
                android:textSize="16dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:gravity="start|center"
                android:textColor="@color/text_ColorDark"/>
        </LinearLayout>

    </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/sign_out_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:cardBackgroundColor="#EEF4FE"
            app:cardCornerRadius="25dp"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:elevation="0dp"
            app:cardElevation="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/sign_out"
                android:fontFamily="@font/libre_medium"
                android:textSize="14dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:paddingStart="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#1F74EC"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>