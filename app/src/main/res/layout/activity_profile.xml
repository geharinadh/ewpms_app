<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_txt"
                android:fontFamily="@font/libre_semi_bold"
                android:textSize="22dp"
                android:layout_centerVertical="true"
                android:gravity="start|center"
                android:paddingHorizontal="16dp"
                android:textStyle="bold"
                android:textColor="@color/button_text"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_profile"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/edit_tv"
                app:tint="@color/text_color_gray" />

            <TextView
                android:id="@+id/edit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_txt"
                android:fontFamily="@font/libre_medium"
                android:textSize="14dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="start|center"
                android:layout_marginRight="16dp"
                android:textStyle="bold"
                android:textColor="@color/text_Color_light"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp"
               >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:src="@drawable/demo_profile"
                    android:scaleType="centerCrop"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/line_color"
                    android:layout_width="72dp"
                    android:layout_height="72dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_txt"
                        android:fontFamily="@font/libre_semi_bold"
                        android:textSize="16dp"
                        android:paddingLeft="5dp"
                        android:gravity="start|center"
                        android:textStyle="bold"
                        android:textColor="@color/text_ColorDark"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/orange"
                        app:cardCornerRadius="14dp"
                        android:layout_marginTop="5dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp">
                        <TextView
                            android:id="@+id/user_type_tv"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="EE"
                            android:fontFamily="@font/libre_medium"
                            android:textSize="12dp"
                            android:paddingStart="16dp"
                            android:layout_centerVertical="true"
                            android:gravity="start|center"
                            android:textStyle="bold"
                            android:textColor="@color/button_text"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mail_icon"
                    app:tint="@color/text_ColorDark" />

                <TextView
                    android:id="@+id/email_id_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_name_txt"
                    android:fontFamily="@font/libre_semi_bold"
                    android:textSize="12dp"
                    android:paddingLeft="5dp"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:textColor="@color/text_ColorDark"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/text_Color_light"/>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>