<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    tools:context="com.EWPMS.fragments.ReportsFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/sky_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:fontFamily="@font/libre_semi_bold"
                android:text="@string/work_Status"
                android:textColor="@color/text_ColorDark"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/ahead_of_schedule"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <com.liihuu.progressbar.FloatTextProgressBar
                android:id="@+id/floatTextProgressBar"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="30dp"
                app:backgroundColor="#d8d8d8"
                app:fillColor="#ff0000"
                app:triangleColor="#ff0000"
                app:rectColor="#ff0000"
                app:maxProgress="200"
                app:textColor="#fff"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/beyond_schedule"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/asper_schedule"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/libre_medium"
                android:text="Total Works: 89"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_ColorDark"
                android:textSize="14sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/sky_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:fontFamily="@font/libre_semi_bold"
                android:text="@string/milestones"
                android:textColor="@color/text_ColorDark"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/completed_txt"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/ongoing_txt_caps"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/delay_txt"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/libre_medium"
                android:text="Total Milestones: 861"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_ColorDark"
                android:textSize="14sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/sky_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center"
                android:fontFamily="@font/libre_semi_bold"
                android:text="@string/finance_in_lakhs"
                android:textColor="@color/text_ColorDark"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/amt_commited_txt"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="RS.16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/amt_released_txt"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="RS.16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_medium"
                    android:text="@string/amt_pending_txt"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="12sp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|center"
                    android:layout_weight="1"
                    android:fontFamily="@font/libre_semi_bold"
                    android:text="RS.16"
                    android:textStyle="bold"
                    android:textColor="@color/text_ColorDark"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/libre_medium"
                android:text="Total Amounts(In Lakhs): Rs. 26994.92"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/text_ColorDark"
                android:textSize="14sp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

</androidx.core.widget.NestedScrollView>